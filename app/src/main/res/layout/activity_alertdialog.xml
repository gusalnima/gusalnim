<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clipChildren="true"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/bg_f7f7f7"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_4d4d4d"
            android:textSize="@dimen/text_63px"
            android:textStyle="bold"
            android:lineSpacingExtra="3dp"
            android:text="서울도시가스\n알림 도착"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/message"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_4d4d4d"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="35dp"
            android:textSize="@dimen/text_51px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_51px"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/text_969696"
                android:text="@string/label_close" />
            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_51px"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:text="@string/label_enter" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
